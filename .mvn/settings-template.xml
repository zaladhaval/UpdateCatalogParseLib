<!--
  This is a template for Maven settings.xml for publishing to GitHub Packages.
  
  To use this:
  1. Copy this file to ~/.m2/settings.xml (or merge with your existing settings.xml)
  2. Replace YOUR_GITHUB_USERNAME with your GitHub username
  3. Replace YOUR_GITHUB_TOKEN with a GitHub Personal Access Token with 'write:packages' scope
  
  To create a GitHub Personal Access Token:
  1. Go to GitHub Settings > Developer settings > Personal access tokens > Tokens (classic)
  2. Click "Generate new token (classic)"
  3. Give it a name like "Maven Package Publishing"
  4. Select the 'write:packages' scope (and 'read:packages' if you want to download packages)
  5. Click "Generate token" and copy the token
  
  For more information:
  https://docs.github.com/en/packages/working-with-a-github-packages-registry/working-with-the-apache-maven-registry
-->
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                              http://maven.apache.org/xsd/settings-1.0.0.xsd">
  
  <servers>
    <server>
      <id>github</id>
      <username>YOUR_GITHUB_USERNAME</username>
      <password>YOUR_GITHUB_TOKEN</password>
    </server>
  </servers>
  
</settings>

